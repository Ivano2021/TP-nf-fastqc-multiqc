nextflow.enable.dsl=2

params {
    outdir = "results"
}

process {
    withName: FASTP {
        cpus = 2
        memory = '2 GB'
    }

    withName: FASTQC {
        cpus = 1
        memory = '1 GB'
    }

    withName: MULTIQC {
        cpus = 1
        memory = '1 GB'
    }
}

profiles {

    standard {
        process.executor = 'local'
        process.cpus = 2
        process.memory = '4 GB'
    }

    sequential {
        process.executor = 'local'
        process.cpus = 1
        process.memory = '2 GB'
    }

    parallel {
        process.executor = 'local'
        process.cpus = 8
        process.memory = '16 GB'
    }

    max {
        process.executor = 'local'
        process.cpus = 24
        process.memory = '15 GB'
    }
}
